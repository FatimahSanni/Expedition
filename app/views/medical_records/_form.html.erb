<%= simple_form_for(@medical_record) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :complaints %>
    <%= f.input :pre_lva %>
    <%= f.input :pre_rva %>
    <%= f.association :diagnosis %>
    <%= f.input :eye %>
    <%= f.association :treatment %>
    <%= f.input :booked %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
