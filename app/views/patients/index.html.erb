<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Surname</th>
      <th>Other names</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Address</th>
      <th>Phone</th>
      <th>State</th>
      <th>Lga</th>
      <th>Intervention state</th>
      <th>Next of kin</th>
      <th>Relationship</th>
      <th>Nok phone</th>
      <th>Nok address</th>
      <th>Complaints</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.surname %></td>
        <td><%= patient.other_names %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.age %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.state %></td>
        <td><%= patient.lga %></td>
        <td><%= patient.intervention_state %></td>
        <td><%= patient.next_of_kin %></td>
        <td><%= patient.relationship %></td>
        <td><%= patient.nok_phone %></td>
        <td><%= patient.nok_address %></td>
        <td><%= patient.complaints %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

